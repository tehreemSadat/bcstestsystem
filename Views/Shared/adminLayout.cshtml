                        <ul class="dropdown-menu">
                            <li id="addquiz"><a href="@Url.Action("AddQuiz", "Admin")">Add Quiz</a></li>
                            <li id="addquestion"><a href="@Url.Action("AddQuestion", "Admin")">Add Question</a></li>
                        </ul>
                    </li>
                    <li id="view" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">View <span class="glyphicon glyphicon-list"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li id="viewquiz"><a href="@Url.Action("ViewQuiz", "Admin")">View Quiz</a></li>
                            <li id="viewresult"><a href="@Url.Action("ViewResult", "Admin")">View Result</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" onclick="ShowAdminSetting()">Setting<span class="glyphicon glyphicon-cog"></span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Session["loginid"]<span class="glyphicon glyphicon-user"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Initialize Db</a></li>
                            <li><a href="@Url.Action("LogOut", "Home")">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

